# ===========================================
# ApniSec Development Dockerfile
# ===========================================

FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* ./
COPY prisma ./prisma/
RUN npm install

# Generate Prisma client
RUN npx prisma generate

# Copy source code
COPY . .

EXPOSE 3000 5555

CMD ["npm", "run", "dev"]
